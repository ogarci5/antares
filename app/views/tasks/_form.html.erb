<%= bootstrap_form_for(@task) do |f| %>
  <%= f.alert_message 'Please fix the errors below.' %>
  <%= f.text_field :name %>
  <%= f.text_area :description %>
  <%= f.select :task_id, Task.pluck(:name, :id).to_a, include_blank: 'None' %>
  <%= f.check_box :due_date, label: 'Due Date?', checked: @task.due_date? %>
  <%= f.datetime_select :due_date, {}, class: 'date-select due-date-select', disabled: !@task.due_date? %>
  <%= f.number_field :priority, value: @task.priority || 0 %>
  <%= f.check_box :completed %>
  <%= f.check_box :recurring %>
  <%= f.check_box :remind_me %>
  <%= f.select :period, ['Daily', 'Weekly', 'Monthly'], include_blank: 'None' %>
  <%= link_to 'Back', tasks_path, class: 'btn btn-default' %>
  <%= f.submit %>
<% end %>